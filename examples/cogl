create LbaCoglCube c

create LbaCoglWindow w
create LbaCoglLabel l

create LbaCoglTexture t
set c.texture t

set c.drawing-scene w
set l.drawing-scene w

set l.x 0.1
set l.y 0.1
set l.text Bombolla
set l.font-size 40
set l.font-name Chilanka

create LbaCoglLabel l2
set l2.drawing-scene w
set l2.x 0.1
set l2.y 0.3
set l2.font-size 25

create LbaClock cc
bind l2.text cc.current-time
set cc.tick-interval-ms 500

call w.open

# Shouldn't we request redraw on each property change automatically??
on cc.notify::current-time
call w.request-redraw
end
